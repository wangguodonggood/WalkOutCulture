<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.shiyuesoft.activity.NotesDetailsActivity">
    <include layout="@layout/layout_notedetails"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/note_allLinear"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="10dp">

            <com.shiyuesoft.util.CircleImageView
                android:id="@+id/notedetails_ImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                app:border_width="0.5dp"
                app:border_color="@color/gray"
                />

            <TextView
                android:id="@+id/notedetails_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/notedetails_ImageView"
                android:textSize="16sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/notedetails_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/notedetails_name"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <TextView
                android:id="@+id/notedetails_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/notedetails_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notedetails_name"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/notedetails_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notedetails_title"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:lineSpacingExtra="5dp"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jing"
                android:layout_above="@id/notedetails_content"
                android:layout_toRightOf="@id/notedetails_title"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="11dp"
                android:id="@+id/jingFlag"
                android:visibility="gone"
                />
            <!--   <com.loopj.android.image.SmartImageView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/showfirst_image"
                   android:src="@drawable/u2"
                   android:layout_below="@id/moments_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginBottom="10dp"
                   />-->
            <com.shiyuesoft.util.NineGridTestLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout_nine_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notedetails_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:sapcing="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_bac"
                android:textSize="15sp"
                android:layout_below="@id/layout_nine_grid"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/notedetails_address"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_below="@id/notedetails_address"
                    android:background="@color/write"
                    >
                    <RadioButton
                        style="@style/MyRadioButtonStyle"
                        android:id="@+id/m_r1"
                        android:drawableLeft="@drawable/share"
                        android:text="1"
                        android:drawablePadding="-30dp"
                        android:paddingLeft="25dp"
                        android:textColor="@color/grey"
                        android:layout_height="match_parent" />
                    <RadioButton
                        style="@style/MyRadioButtonStyle"
                        android:id="@+id/m_r2"
                        android:drawableLeft="@drawable/collct_selector"
                        android:textColor="@color/grey"
                        android:paddingLeft="25dp"
                        android:layout_height="match_parent" />
                    <RadioButton
                        style="@style/MyRadioButtonStyle"
                        android:id="@+id/m_r3"
                        android:drawableLeft="@drawable/collct_selector1"
                        android:textColor="@color/grey"
                        android:text="1"
                        android:drawablePadding="-30dp"
                        android:paddingLeft="25dp"
                        android:layout_height="match_parent" />

                    <RadioButton
                        android:id="@+id/m_r4"
                        style="@style/MyRadioButtonStyle"
                        android:drawableLeft="@drawable/msg"
                        android:drawablePadding="-30dp"
                        android:paddingLeft="25dp"
                        android:text="1"
                        android:textColor="@color/grey"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pinglun"
                android:textSize="17sp"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="10dip"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:orientation="horizontal"
                android:background="@drawable/border_words"
                android:layout_margin="10dip"
                android:id="@+id/notedetails_linear"
                >
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="100字以内"
                    android:background="@null"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:id="@+id/edit_content"
                    android:maxLength="100"
                    android:lineSpacingExtra="5dp"
                    />
                <View
                    android:layout_width="0.3dip"
                    android:layout_height="90dip"
                    android:layout_gravity="center"
                    android:background="@color/background"
                    android:layout_margin="5dp"
                    />
                <Button
                    android:id="@+id/send"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="发送"
                    android:textColor="#4798C4"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_selector"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <com.shiyuesoft.util.MyListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notedetails_listview"
                android:dividerHeight="0.5dp"
                >
            </com.shiyuesoft.util.MyListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/ifGood"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/ifColloct"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
